<?xml version="1.0"?>
<sdf version="1.6">
  <model name="Mercury">
    <static>true</static>
    <link name="robot_link">
      <!-- Collision definition -->
      <collision name="body_collision">
        <geometry>
          <box>
            <size>0.35 0.5 0.01</size> <!-- Width, Height, Thin Depth -->
          </box>
        </geometry>
      </collision>
      
      <!-- Visual appearance -->
      <visual name="body_visual">
        <geometry>
          <box>
            <size>0.35 0.5 0.01</size> <!-- Width, Height, Thin Depth -->
          </box>
        </geometry>
        <material>
          <script>
           <uri>model://Mercury/materials/scripts/</uri>
           <uri>model://Mercury/materials/textures/</uri>
           <name>Mercury</name>
          </script>
        </material>
      </visual>
    </link>
  </model>
</sdf>

